<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/linearLayout4">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="463dp"
            android:layout_weight="1"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="8dp">

            <Button
                android:layout_width="100dp"
                android:layout_height="75dp"

                android:id="@+id/button8"
                android:background="@drawable/complaint"
                android:layout_weight="1"
                android:layout_margin="16dp"
                android:layout_gravity="center" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Make a Complaint"
                android:id="@+id/textView5"
                android:layout_below="@+id/linearLayout2"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textSize="15sp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_marginBottom="10dp" />

            <Button
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:background="@drawable/sos"
                android:id="@+id/button9"
                android:layout_weight="1"
                android:layout_margin="16dp"
                android:layout_gravity="center" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="SOS"
                android:id="@+id/textView7"
                android:layout_below="@+id/linearLayout3"
                android:layout_alignLeft="@+id/linearLayout3"
                android:layout_alignStart="@+id/linearLayout3"
                android:gravity="center"
                android:textSize="15sp" />

            <Button
                android:layout_width="100dp"
                android:layout_height="75dp"
                android:background="@drawable/traffic"
                android:id="@+id/button11"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:layout_gravity="center" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Current Traffic"
                android:id="@+id/textView9"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="15sp" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="463dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_weight="1"
            android:layout_marginBottom="8dp">

            <Button
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:background="@drawable/report"
                android:id="@+id/button7"
                android:layout_weight="1"
                android:layout_margin="16dp"
                android:layout_gravity="center" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Report an incident"
                android:id="@+id/textView6"
                android:layout_below="@+id/linearLayout"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:textSize="15sp"
                android:layout_weight="1"
                android:gravity="center" />

            <Button
                android:layout_width="100dp"
                android:layout_height="75dp"
                android:background="@drawable/complaint"
                android:id="@+id/button10"
                android:layout_weight="1"
                android:layout_margin="16dp"
                android:layout_gravity="center" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="women comp"
                android:id="@+id/textView8"
                android:layout_below="@+id/linearLayout3"
                android:layout_toRightOf="@+id/textView7"
                android:layout_toEndOf="@+id/textView7"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="15sp" />

            <Button
                android:layout_width="100dp"
                android:layout_height="75dp"
                android:background="@drawable/rating"
                android:id="@+id/button12"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:layout_gravity="center" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Rate your Area"
                android:id="@+id/textView10"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="15sp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_alignParentBottom="true"
        android:id="@+id/linearLayout4">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Live Traffic"
            android:id="@+id/button13"
            android:background="#0097A7"
            android:textColor="#FFFFFF"
            android:layout_weight="1"
            android:textSize="15dp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Near by Places"
            android:id="@+id/button5"
            android:textColor="#FFFFFF"
            android:background="#0097A7"
            android:layout_weight="1"
            android:textSize="15sp" />
    </LinearLayout>


</RelativeLayout>